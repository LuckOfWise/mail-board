%h1.page-header ユーザー登録

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, input_html: {autofocus: true, class: 'form-control'}
    = f.input :email, input_html: {class: 'form-control'}, required: true
    = f.input :password, input_html: {class: 'form-control'}, required: true
    = f.input :password_confirmation, input_html: {class: 'form-control'}, required: true
  .form-actions
    = f.submit 'ユーザー登録する', class: 'btn btn-primary'
