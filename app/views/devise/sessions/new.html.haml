%h1.page-header ログイン

= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form' }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, class: 'form-control'
  .form-group
    - if devise_mapping.recoverable?
      = link_to 'パスワードを忘れた方はこちら', new_password_path(resource_name), class: 'pull-right', tabindex: '-1'
    = f.label :password
    = f.password_field :password, class: 'form-control'
  = f.submit 'ログインする', class: 'btn btn-primary'
    - if devise_mapping.rememberable?
    .checkbox
      = f.check_box :remember_me
      = f.label :remember_me
